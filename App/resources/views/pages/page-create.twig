{% extends "base.twig" %}

{% block content %}
    <h1 class="jn_plugin_h1">Create a Page</h1>

    <div class="row_title col_wrapper">
        <label for="page_name">Enter Page Name:</label>
        <input type="text" name="page_name">
    </div>

    <div class="col_container left_big">
        <page-create-modules modules="{{ modules|json_encode() }}"></page-create-modules>

        <div class="col side_col">
            {% include 'partials/save.twig' with {'action' : 'page-store'} %}
        </div>
    </div>
{% endblock %}