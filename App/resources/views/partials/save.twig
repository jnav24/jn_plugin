<div id="save" class="save_container">
    <div class="col_wrapper">
        {% if page is not null %}
            <h2>Page Info</h2>

            <p><strong>Last Modified By:</strong> {{ getUserName(page.modified_by) }}</p>
            <p><strong>Last Modified On:</strong> {{ page.updated_at|date('M d, y') }} @ {{ page.updated_at|date('G:i') }}</p>

            Publish <input type="radio" name="page_status" value="publish" checked>
            Draft <input type="radio" name="page_status" value="draft">
        {% endif %}

        <input type="hidden" name="page_action" value="{{ action }}">
        <input type="hidden" name="modified_by" value="{{ getCurrentUser() }}">

        <div class="save__btns" style="padding-left: 15px">
            <input type="submit" name="btn_save" class="flat_btn btn__save" value="Save">
            <a href="{{ main_page_url }}" class="flat_btn">Cancel</a>
        </div>
    </div>
</div>